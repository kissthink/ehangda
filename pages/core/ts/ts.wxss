@import "../../common/common.wxss";
.header{
    background-image: url('http://ehang.ourcauc.com/static/img/ts_bg2.jpg') ;
    /* 背景图不平铺 */
   
    background-size: cover;
    height: 150px;
    width: 100%;
}
page{
  width: 100%;
  height: 100%;
}
button{
  position: relative;
  width: 12.5rem;
  margin: 20px auto ;
  background-color: #1FABAA;
  border: none;
  border-radius: 0.3125rem;
  box-shadow: 0 12px 24px 0 rgba(0, 0, 0, 0.2);
  color: white;
  font-weight: 300;
  text-transform: uppercase;
  overflow: hidden;
}
.contai{
  width: 100%;
  height: 100%;
}
.loading{
  height: 100%;
  display: flex;
  justify-content:center;
  align-items:Center;
  text-align: center;
}
.loading image{
  width: 100%;
}

.ts_list{
 
  display: flex;
  flex-flow:row;/*伸缩项目单行排列*/  
  align-items:center;
  height: 100px;
  border-bottom: 1px solid ghostwhite;

}
.ts_info{
  flex: 1;
  display: flex;
  flex-direction:column;/*伸缩项目单行排列*/ 
}
.ts_warn{
  width: 80px;
}
.ts_icon{
  width: 60px;
  display: flex;
  align-items:center;
}
.ts_icon image{
  width: 40px;
  height: 40px;
}
.ts_time{
  color: gray;
  
}
.day{
  font-weight: bold;
  color: #B0BED2;
  font-size: 1.6rem;
}
/*图书汇总信息 */
.ts_bs{
  font-size: 2.4rem;
}
.yj{
  padding-top: 10px;
  font-size: 0.8rem;
}
.header{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.header text{
  color: white;
}
.header>view{
 margin-left: 15px;
 margin-bottom: 5px;
}
.ts_fb,.ts_qf{
  font-size: 0.9rem;
}
.ts_dw{
  font-size: 0.9rem;
}
/*无借书的时候  */
.nothing_img{
  width: 100%;
  text-align: center;
  margin-top: 100px;
}
.nothing_img image{
  width: 60%;

}
.nothing_tip{
  color: gray;
  text-align: center;
}