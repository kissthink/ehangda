@import "../ks/ks.wxss";
page{
  background-color: #F8F8F8;
}
/*输入框  */
.search input{
  width: 89%;
  margin: 10px 0;
  background-color: white;
  height: 30px;
  border-radius:5px;
  padding: 1%;
  padding-left: 10%;
}
.search{
  width: 100%;
}
.search_icon{
  position: absolute;
  z-index: 100;
  margin-left: 3%;
  margin-top: 8px;
}
/*提示  */
.info{
  width: 100%;
  height: 30px;
  line-height: 30px;
  background-color: white;
}
.info text{
  margin: 6%;
  color: #34A553;
}
/*搜索列表  */
.book_info{
  padding: 10px 0px;
  padding-left: 6%;
  display: flex;
  
  flex-direction: row;
  border-bottom: 1px solid #E5E5E5;
  align-items: center;
}
.book_position{
  font-size: 0.9rem;
  color:#494D4A;
}
.book_position image,.book_title image{
  width: 20px;
  height: 20px;
}
.book_info_detail{
  flex: 1;
}
.book_info_statu{
  width: 100px;
}
.book_btn_statu_on{
  line-height: 40px;
  padding: 1px;
  height: 40px;
  background-color: transparent;
  width: 60px;
  border: 1px solid #34A553;
}
.book_btn_statu_off{
  line-height: 40px;
  padding: 1px;
  height: 40px;
  background-color: transparent;
  width: 60px;
  border: 1px solid gray;
  color: gray;
}