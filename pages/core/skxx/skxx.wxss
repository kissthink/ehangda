@import "../../common/common.wxss";
page{
  background-color: #E8E8E8;
}
/*搜索框  */
.search input{
  width: 85%;
  margin: 0 auto;
  background-color: white;
  height: 30px;
  border-radius:5px;
  padding: 3px;
  padding-left: 40px;
}
.search{
  background-color: #5580A2;
  width: 100%;
  height: 40px;
  margin-bottom: 15px;
}
.search_icon{
  position: absolute;
  z-index: 100;
  margin-left: 3%;
  margin-top: 8px;
}

.card{
  display: flex;
  flex-direction: row;
  background-color: white;
  align-items: center;
  margin-bottom: 15px;
  height: 120px;
}
.card_img{
  width: 120px;
  height: 120px;
  margin-right: 20px;
}
.card_detail{
  flex: 1;
  font-size: 0.9rem;
  color: gray;
}
.card_detail view{
  padding: 0px;
  margin: 0px;
}
.card_img image{
  width: 120px;
  
}
.card_detail_name{
  font-size: 1.1rem;
  color: black;
}