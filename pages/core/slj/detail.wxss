page{
  background-color: #E7E5E6;
}
.header_img{
  position: absolute;
  width: 100%;
  height: 200px;
}
.header_img image{
  width: 100%;
}
/*主要页面  */
.containers{
  position: absolute;
  width: 94%;
  padding-bottom: 30px;
  margin: 3%;
  background-color: white;
  border-radius: 5px;
  text-align: center;
}
.header_title1{
  color: #3A4057;
  font-size: 1.5rem;
  width: 80%;
  margin: 0 auto;
}
.header_logo image{
  width: 100px;
  height: 60px;
}
/*个人信息  */
.gr_info{
  margin: 10% auto;
  width: 80%;
  text-align: left;
  color: gray;
}
.gr_info view{
  margin: 10px;
}
.cj_list{
  width: 90%;
  margin: 0 auto;
  border: 1px solid #D4D4D4;
  padding: 10px;
}
.cj_list_zf{
  display: flex;
  flex-direction: row;
  border-bottom: 1px dashed #D4D4D4;
  color: #3A4057;
}
.cj_list_zf .cj_list_fs{
  width: 100px;
  text-align: right;
  font-size: 1.3rem;
  
  font-weight: bold;
}
.cj_list_zf .cj_list_type{
  flex: 1;
  text-align: left;
}
.cj_list_dx{
  display: flex;
  flex-direction: row;
}
.cj_list_dx .cj_list_fs{
  width: 100px;
  text-align: right;
}
.cj_list_dx .cj_list_type{
  flex: 1;
  text-align: left;
}
.cj_list_dx{
  margin: 15px 0;
}