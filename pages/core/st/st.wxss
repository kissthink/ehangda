@import "../../common/common.wxss";
page{
  width: 100%;
  height: 100%;

}
.title{
  width: 100%;
  height: 80px;
  background-color: #00F0D4;
  text-align: center;
}
.title .fz text{
  font-size: 1.6rem;
  color: white;
  font-weight: bold;
}
.st_icon,.st_score{
  width: 60px;
}
.st_icon image{
  width: 40px;
  height: 40px;
}
.st_name{
  -webkit-flex:1;-moz-flex:1;flex:1
}
.list{
  display: flex;
  height: 60px;
  flex-direction:row;
  border-bottom: 1px solid gainsboro;
  background-color: #FCFCFC;
}
.list text{
  line-height: 60px;
}
.loading{
  height: 100%;
  display: flex;
  justify-content:center;
  align-items:Center;
  text-align: center;
}
.loading image{
  width: 100%;
}
.score{
  color: #906239;
  font-weight: bold;
}
.list .st_icon image{
  margin-top: 10px;
}

/*更多图标  */
.fz image{
  width: 23px;
  height: 23px;
  position: relative;
  top: -5px;
}
